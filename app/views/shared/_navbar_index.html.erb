<div class="navbar d-flex fixed-top">
  <%= link_to cocktails_path do  %>
    <div class="d-flex align-items-end">
    <div><%= image_tag 'https://image.flaticon.com/icons/svg/920/920700.svg', style: 'height:40px;width:auto;' %></div>
    <div><h3>CocktailsIt</h3></div>
   </div>
  <% end %>

  <div class="d-flex align-items-start">
    <div class=" pr-3 ">
      <%= form_tag('cocktail_selected') do %>
        <%= select_tag "cocktail", options_from_collection_for_select(@cocktails, "id", "name") %>
       <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
       <%= submit_tag 'Search', class: 'button-sunset text-center' %>
      <% end %>
    </div>
    <div class="button-sunset"><%= link_to 'Add a cocktail', new_cocktail_path %></div>
  </div>
</div>
