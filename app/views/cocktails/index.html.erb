<div class="navbar d-flex">
  <%= link_to cocktails_path do  %>
    <div class="d-flex align-items-end">
    <div><%= image_tag 'https://image.flaticon.com/icons/svg/920/920700.svg', style: 'height:40px;width:auto;' %></div>
    <div><h3>CocktailsIt</h3></div>
   </div>
  <% end %>
  <div class="button-sunset"><%= link_to 'Add a cocktail', new_cocktail_path %></div>
</div>

<div class="banner">
  <div class="banner-content text-center" >
    <h1 >CocktailsIt</h1>
    <p>
      <span id="banner-typed-text"></span>
    </p>
  </div>

</div>


<div class="container text-center">
  <h1>Choose your drink !</h1>
    <div class="d-flex flex-wrap justify-content-between align-content-start mt-5" >
    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail) do %>
        <div class="card-cocktail">
          <img src='<%= cocktail.image_url %>' alt="">
        <h2><%= cocktail.name %></h2>
        </div>
        <% end %>
    <% end %>
  </div>
</div>

